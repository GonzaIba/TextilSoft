<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<add key="log4net.Internal.Debug" value="true" />
	</appSettings>
	
	<system.diagnostics>
		<trace autoflush="true">
			<listeners>
				<add
                    name="textWriterTraceListener"
                    type="System.Diagnostics.TextWriterTraceListener"
                    initializeData="c:\tmp\log4net.txt" />
			</listeners>
		</trace>
	</system.diagnostics>

	<connectionStrings>
		<add name="ConnectionString1" connectionString="Data Source=localhost; Persist Security Info=True; Initial Catalog=upf;Integrated Security=True:User ID=testUser2;Password=1234;"  providerName="System.Data.SqlClient"  />
	</connectionStrings>

	<log4net>
		<root>
			<level value="Debug" />
			<appender-ref ref="LogerManager" />
			<appender-ref ref="Performance" />
		</root>
		<appender name="LogerManager" type="log4net.Appender.FileAppender">
			<file value="D:\Repositorios-SmartGit\TextilSoft\Logs\LogerManager.txt" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%ndc] %line - %message%newline" />
			</layout>
		</appender>

		<appender name="Performance" type="log4net.Appender.FileAppender">
			<file value="D:\Repositorios-SmartGit\TextilSoft\Logs\Performance.txt" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="5" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%ndc] %line - %message%newline" />
			</layout>
		</appender>

		<logger additivity="false" name="Performance">
			<level value="DEBUG"/>
			<appender-ref ref="Performance" />
		</logger>

		<logger additivity="false" name="LogerManager">
			<level value="DEBUG"/>
			<appender-ref ref="LogerManager" />
		</logger>
	</log4net>
</configuration>